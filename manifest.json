{
    "name": "Pause All Videos",
    "description": "Quickly pause all playing videos across your browser tabs with one click. All it takes is one click!",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
      "default_popup": "index.html",
      "default_icon": "icons/icon128.png"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": ["scripting", "tabs"],
    "host_permissions": ["<all_urls>"]
  }
  